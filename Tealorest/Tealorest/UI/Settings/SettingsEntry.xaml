<UserControl x:Class="Tealorest.UI.Settings.SettingsEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tealorest.UI.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="128">
    <Grid x:Name="xEntry">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="xKey" IsReadOnly="True"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 FontFamily="{StaticResource PixelFont}"
                 FontSize="20"/>
        <TextBox x:Name="xValue" Grid.Column="1"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 FontFamily="{StaticResource PixelFont}"
                 FontSize="20"/>
    </Grid>
</UserControl>
